<div class="bg-white w-full flex flex-col gap-5 px-3 md:px-16 lg:px-28 md:flex-row dark:bg-gray-900">
  <%= render 'shared/sidebar' %>
  <main class="w-full min-h-screen py-1 md:w-2/3 lg:w-3/4">
    <div class="p-2 md:p-4">
      <div class="w-full px-6 pb-8 mt-8 sm:max-w-xl sm:rounded-lg">
        <div class="grid max-w-2xl mx-auto mt-8">
          <div class="flex flex-col justify-center items-center space-y-5 sm:flex-row sm:space-y-0">
            <%= image_tag current_user.avatar_url, class: "object-cover p-1 rounded-full ring-2 ring-teal-500 dark:ring-teal-400", size: '200x200' %>
            <div class="flex flex-col space-y-5 sm:ml-8">
              <%= link_to t('.to_edit_page'), edit_profile_path, class: "py-3.5 px-7 text-base font-medium text-indigo-100 focus:outline-none bg-teal-400 rounded-lg border border-indigo-200 hover:bg-indigo-500 focus:z-10 focus:ring-4 focus:ring-teal-200 " %>
            </div>
          </div>
          <div class="items-center mt-8 sm:mt-14">
            <div class="mb-2 sm:mb-6">
              <label class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">
                <%= User.human_attribute_name(:full_name) %>
              </label>
              <p class="bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5 ">
                <%= current_user.decorate.full_name %>
              </p>
            </div>
            <div class="mb-2 sm:mb-6">
              <label class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">
                <%= User.human_attribute_name(:nickname) %>
              </label>
              <p class="bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5 ">
                <%= current_user.nickname %>
              </p>
            </div>
            <div class="flex flex-col items-center w-full mb-2 space-x-0 space-y-2 sm:flex-row sm:space-x-4 sm:space-y-0 sm:mb-6">
              <div class="w-full">
                <label class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">
                  <%= User.human_attribute_name(:age) %>
                </label>
                <p class="h-10 bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5 ">
                  <%= current_user.age %>
                </p>
              </div>
              <div class="w-full">
                <label class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">
                  <%= User.human_attribute_name(:gender) %>
                </label>
                <p class="h-10 bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5 ">
                  <%= current_user.gender %>
                </p>
              </div>
            </div>
            <div class="mb-2 sm:mb-6">
              <label class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">
                <%= User.human_attribute_name(:email) %>
              </label>
              <p class="bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5 ">
                <%= current_user.email %>
              </p>
            </div>
            <div class="mb-6">
              <label class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">
                <%= User.human_attribute_name(:bio) %>
              </label>
            <textarea disabled rows="4" class="block p-2.5 w-full text-sm text-indigo-900 bg-indigo-50 rounded-lg border border-indigo-300 focus:ring-indigo-500 focus:border-indigo-500 ">
              <%= current_user.bio %>
            </textarea>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
