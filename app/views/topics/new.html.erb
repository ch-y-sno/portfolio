<% content_for(:title, t('.title')) %>
<div class="bg-white w-full flex flex-col gap-5 px-3 md:px-16 lg:px-28 md:flex-row dark:bg-gray-900">
  <main class="w-full min-h-screen py-1 md:w-2/3 lg:w-3/4">
    <%= form_with model: [@team, @topic] do |f| %>
      <div>
        <%= render 'shared/error_messages', object: f.object %>
      </div>
      <div class="w-full px-6 pb-8 mt-8 sm:max-w-xl sm:rounded-lg">
        <div class="mb-2 sm:mb-6">
          <%= f.label :title, class: "block mb-2 text-sm font-medium text-indigo-900 dark:text-white" %>
          <%= f.text_field :title, class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5" %>
        </div>
        <div class="mb-2 sm:mb-6">
          <%= f.label :description, class: "block mb-2 text-sm font-medium text-indigo-900 dark:text-white" %>
          <%= f.text_area :description, class: "bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5" %>
        </div>
        <div class="flex mt-10 grid gap-6 mb-6 md:grid-cols-2">
          <%= f.submit class: "flex items-center justify-center text-white bg-teal-400 hover:bg-teal-500 focus:outline-none font-medium rounded-lg text-sm py-3 text-center dark:bg-teal-400 dark:hover:bg-teal-500" %>
          <%= link_to '戻る', team_members_path(@team), class: "flex items-center justify-center text-white bg-gray-400 hover:bg-teal-500 focus:outline-none font-medium rounded-lg text-sm py-3 text-center dark:bg-gray-400 dark:hover:bg-gray-500" %>
        </div>
      </div>
    <% end %>
  </main>
</div>
