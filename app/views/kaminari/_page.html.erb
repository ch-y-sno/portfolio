<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="page current z-10 flex items-center justify-center px-3 h-8 leading-tight text-gray-100 border border-teal-600 bg-teal-500 hover:bg-teal-700 hover:text-white dark:border-gray-700 dark:bg-gray-700 dark:text-white">
    <%= page %>
  </span>
<% else %>
  <span class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
    <%= link_to page, url, remote: remote, rel: page.rel %>
  </span>
<% end %>
