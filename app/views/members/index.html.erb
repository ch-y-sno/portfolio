<% content_for(:title, t('.title')) %>
<div class="bg-white w-full flex flex-col gap-5 justify-center md:flex-row dark:bg-gray-900">
  <main class="w-full min-h-screen md:w-2/3 lg:w-3/4">
    <div class="p-2 md:p-4">
      <div class="w-full px-6 pb-8 mt-8 sm:max-w-xl sm:rounded-lg">
        <div class="grid max-w-2xl mx-auto mt-8">
          <div class="mb-5 flex flex-col justify-center items-center sm:flex-row sm:space-y-0">
            <%= image_tag @team.team_avatar.url,
                              class: 'object-cover w-50 h-50 p-1 rounded-full ring-2 ring-teal-500 dark:ring-teal-400',
                              id: 'preview',
                              size: '200x200' %>
            <div class="flex mb-2">
              <label class="mr-5 text-sm font-medium text-gray-900 dark:text-white sm:ml-8"><%= t('.leader') %></label>
              <p class="text-sm font-medium text-gray-400 dark:text-white sm:ml-8"><%= @team_leader.decorate.full_name %></p>
            </div>
          </div>
          <%= link_to t('.to_team_page'), team_path(@team), class: "mb-4 text-white bg-teal-400 hover:bg-teal-500 focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-teal-400 dark:hover:bg-teal-500" %>
          <%= link_to t('.to_new_topic_page'), new_team_topic_path(@team), class: "mb-4 text-white bg-purple-400 hover:bg-purple-500 focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-purple-400 dark:hover:bg-purple-500" %>
          <% if current_user == @team_leader %>
            <%= link_to t('.to_team_edit_page'), edit_team_path(@team), class: "mb-4 text-white bg-fuchsia-400 hover:bg-fuchsia-500 focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-fuchsia-400 dark:hover:bg-fuchsia-500" %>
          <% end %>
          <p class="mr-5 text-xl font-medium tracking-tight text-gray-900 dark:text-white sm:ml-8"><%= t('.rule', item: @team.name) %></p>
          <div class="mb-2 border-t border-gray-700 dark:border-white w-full"></div>
          <div class="relative overflow-x-auto">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
              <tbody>
                <tr>
                  <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= t('activerecord.attributes.team.description') %>
                  </th>
                  <td class="px-6 py-2">
                    <%= @team.description %>
                  </td>
                </tr>
                <tr>
                  <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= t('activerecord.attributes.team.max_members') %>
                  </th>
                  <td class="px-6 py-2">
                    <%= t('.max_members', item: @team.max_members) %>
                  </td>
                </tr>
                <tr>
                  <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= t('activerecord.attributes.team.topic_frequency') %>
                  </th>
                  <td class="px-6 py-2">
                    <%= t('.topic_frequency', item: @team.topic_frequency) %>
                  </td>
                </tr>
                <tr>
                  <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= t('activerecord.attributes.team.topic_post_time') %>
                  </th>
                  <td class="px-6 py-2">
                    <%= l @team.topic_post_time, format: :post_time %>
                  </td>
                </tr>
                <tr>
                  <th scope="row" class="px-6 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= t('activerecord.attributes.team.note') %>
                  </th>
                  <td class="px-6 py-2">
                    <%= @team.note %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
